name: calibration-ci

on:
  push:
    branches: [ "main", "release/**" ]
    paths:
      - "src/**"
      - "configs/**"
      - "pyproject.toml"
      - "poetry.lock"
      - ".github/workflows/calibration-ci.yml"
  pull_request:
    branches: [ "**" ]
  workflow_dispatch: {}

jobs:
  calibrate:
    runs-on: ubuntu-latest
    timeout-minutes: 45

    steps:
      - name: Checkout
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: "3.11"

      - name: Install Poetry
        run: |
          pipx install poetry
          poetry --version

      - name: Install deps (cached)
        uses: actions/cache@v4
        with:
          path: ~/.cache/pypoetry
          key: poetry-${{ runner.os }}-${{ hashFiles('**/poetry.lock') }}
      - run: poetry install --no-interaction --no-ansi

      - name: Selftest (quick)  # keeps main green & reproducible
        run: poetry run spectramind test --mode fast
        # Your repo already treats CLI+configs as the contract of truth for CI reproducibility. 

      - name: Run calibration (Hydra config)
        env:
          SM_LOG_DIR: logs            # allow override from env if needed
        run: |
          poetry run spectramind calibrate \
            --config-path configs/calibration \
            --config-name v50.yaml \
            log.dir=${SM_LOG_DIR}

      - name: Upload calibration log artifact
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: calibration-logs
          path: |
            logs/calibration.json
            outputs/manifests/calibration_manifest.json