# ==============================================================================
# .editorconfig — SpectraMind V50 (ArielSensorArray)
# Purpose: Enforce consistent style across IDEs, CI, Kaggle, and Docker builds.
# Reference: https://editorconfig.org/
# ==============================================================================
root = true

# ========= Global defaults =========
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 88     # aligns with Black / Hydra configs

# ========= Markdown / Docs =========
[*.{md,rst}]
indent_size = 2
trim_trailing_whitespace = false   # preserve intentional spaces in docs

# ========= YAML / Hydra Configs =========
[*.{yml,yaml}]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 88

# ========= JSON / JSONL / TOML =========
[*.json]
indent_size = 2
quote_type = double

[*.jsonl]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[*.toml]
indent_size = 2

# ========= Python =========
[*.py]
indent_size = 4
max_line_length = 88     # Black default
insert_final_newline = true
trim_trailing_whitespace = true

# ========= Jupyter / Notebooks =========
[*.ipynb]
indent_size = 2
trim_trailing_whitespace = false   # don’t break notebook JSON cells

# ========= TypeScript / React GUI =========
[*.{ts,tsx,js,jsx}]
indent_size = 2
quote_type = double
insert_final_newline = true

# ========= Docker / Compose =========
[Dockerfile]
indent_size = 2

[docker-compose*.{yml,yaml}]
indent_size = 2

# ========= CI / GitHub Actions =========
[.github/workflows/*.yml]
indent_size = 2
insert_final_newline = true

# ========= Makefiles =========
[Makefile]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = false   # Makefile tabs are required

# ========= Logs / Generated =========
[*.{log,out}]
insert_final_newline = false
trim_trailing_whitespace = false

# ========= CSV / TSV / TXT =========
[*.csv]
insert_final_newline = false

[*.{tsv,txt}]
indent_size = 2
insert_final_newline = true

# ========= CI / Tests / Reports =========
[*.{ndjson,jsonl}]
insert_final_newline = true
trim_trailing_whitespace = true

[*.html]
indent_size = 2
insert_final_newline = true

# ========= Special Cases =========
[*.env]
insert_final_newline = true
trim_trailing_whitespace = false

[migrations/*]
insert_final_newline = false